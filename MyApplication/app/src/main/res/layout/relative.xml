<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onScreenClick">

    <RelativeLayout
        android:id="@+id/upperCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/TopNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/TopSuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TopNum"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/middleSuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/lowerCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleSuit"
        android:layout_toRightOf="@id/middleSuit"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/bottomSuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/bottomNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:rotation="180"
            android:layout_below="@+id/bottomSuit"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>